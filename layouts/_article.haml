.article
  - if article?
    .article_date.date{:title => iso8601_time(item[:created_at]) }= pretty_time(item[:created_at])
  
  %h1.title= item[:title]
  
  - if article? && item[:tags]
    .tags= tag_list(item)

  .body
    != content || partial(item)
    
    - if disqus_shortname
      - if disqus
        = render('_disqus', :item => @item)
      - else
        %a{:href => "#{route_path(item)}#disqus_thread", :'data-disqus-identifier' => item[:created_at] } Comments
